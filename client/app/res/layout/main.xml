<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1" android:orientation="vertical" style="@android:style/Theme.NoTitleBar">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/imageView"
            android:layout_alignParentTop="true" android:adjustViewBounds="false" android:baselineAlignBottom="false"
            android:clickable="false" android:cropToPadding="false" android:focusable="false" android:focusableInTouchMode="false"/>

    <!--android:autoLink="web"-->
    <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/compasButton" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:padding="25dp"
            android:scaleType="centerInside"
            android:longClickable="false"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/pointButton"
            android:padding="25dp" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false" android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"/>
    <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/zoomOutButton"
            android:layout_centerVertical="true" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
             android:scaleType="centerInside"
             android:src="@drawable/ic_launcher" android:paddingBottom="3dp" android:paddingRight="24dp"/>
    <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/zoomInButton"
            android:src="@drawable/ic_launcher"
            android:layout_above="@+id/zoomOutButton" android:layout_alignRight="@+id/zoomOutButton"
            android:layout_alignEnd="@+id/zoomOutButton"
            android:scaleType="centerInside" android:paddingTop="3dp" android:paddingRight="24dp"/>
    <ImageView
            android:layout_width="115sp"
            android:layout_height="115sp"
            android:id="@+id/logoView" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:scaleType="fitXY"
            android:padding="10dp"/>
    <ImageView android:layout_width="90dp"
               android:layout_height="90dp"
               android:id="@+id/yandexButton" android:padding="15dp"
               android:scaleType="fitXY" android:src="@drawable/ic_launcher" android:layout_alignParentTop="true"
               android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="105sp"
            android:layout_height="30sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/distanceView"
            android:textSize="18sp"
            android:gravity="center"
            android:autoText="false"
            android:password="false" android:background="#ffc8c8c8"
            android:singleLine="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/logoView"
            android:layout_marginLeft="5sp" android:layout_alignRight="@+id/logoView" android:layout_alignEnd="@+id/logoView"
            android:layout_marginRight="5sp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="30sp" android:textAppearance="?android:attr/textAppearanceSmall"
              android:id="@+id/adressView" android:textSize="18sp" android:gravity="center" android:autoText="false"
              android:password="false" android:background="#ffc8c8c8" android:singleLine="false"
              android:layout_alignWithParentIfMissing="false"
              android:layout_toEndOf="@+id/logoView"
              android:layout_toStartOf="@+id/yandexButton"
              android:layout_marginTop="10sp" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/logoView"
              android:layout_toLeftOf="@+id/yandexButton"/>


