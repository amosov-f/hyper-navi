<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1" android:orientation="vertical" style="@android:style/Theme.NoTitleBar">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/imageView"/>

    <TextView
            android:id="@+id/textView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:autoLink="web"
            android:singleLine="false"
            android:textSize="20sp"
            android:linksClickable="true"
            android:textColor="#007FCC"
            android:text="Открыть карту"
            android:layout_alignParentTop="true" android:layout_toRightOf="@+id/compasButton"
            android:layout_toEndOf="@+id/compasButton"/>
    <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/compasButton" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:padding="25dp"
            android:scaleType="centerInside"
            android:longClickable="false"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/pointButton"
            android:padding="25dp" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false" android:scaleType="centerInside"
            android:src="@drawable/ic_launcher"/>
    <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/zoomOutButton"
            android:layout_centerVertical="true" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
             android:scaleType="centerInside"
             android:src="@drawable/ic_launcher" android:paddingBottom="3dp" android:paddingRight="24dp"/>
    <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/zoomInButton"
            android:src="@drawable/ic_launcher"
            android:layout_above="@+id/zoomOutButton" android:layout_alignRight="@+id/zoomOutButton"
            android:layout_alignEnd="@+id/zoomOutButton"
            android:scaleType="centerInside" android:paddingTop="3dp" android:paddingRight="24dp"/>


